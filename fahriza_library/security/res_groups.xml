<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Module Category -->
        <record model="ir.module.category" id="module_category_library">
            <field name="name">Library Management</field>
            <field name="description">Manage library books and operations.</field>
            <field name="sequence">10</field>
        </record>

        <!-- Group: User -->
        <record id="group_library_user" model="res.groups">
            <field name="name">Library User</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Group: Mahasiswa -->
        <record id="group_library_mahasiswa" model="res.groups">
            <field name="name">Library Mahasiswa</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Group: Administrator -->
        <record id="group_library_admin" model="res.groups">
            <field name="name">Library Administrator</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4, ref('group_library_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>


    </data>
</odoo>
